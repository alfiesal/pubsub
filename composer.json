{
    "name": "alfiesal/pubsub",
    "description": "Implementation publish-subscribe pattern",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alfie Salomons",
            "email": "salomonsalfie@gmail.com"
        }
    ],
    "require": {
        "php-amqplib/php-amqplib": "^2.11",
        "ext-json": "*",
        "ramsey/uuid": "^4.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12.40",
        "phpspec/phpspec": "^6.2 || ^7.0",
        "phpunit/phpunit": "^9",
        "vimeo/psalm": "^3.14"
    },
    "autoload": {
        "psr-4": {
            "Alfiesal\\PubSub\\": "src/",
            "Alfiesal\\PubSub\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "precommit": [
            "@cs:fix",
            "@static:analyze",
            "@test"
        ],
        "build": [
            "@static:analyze",
            "@test:spec",
            "@test:phpunit"
        ],
        "static:analyze": [
            "php-cs-fixer fix --dry-run",
            "@phpstan",
            "@psalm"
        ],
        "test": [
            "@test:spec",
            "@test:phpunit"
        ],
        "cs:fix": "php-cs-fixer fix",
        "test:spec": "vendor/bin/phpspec run",
        "test:phpunit": "vendor/bin/phpunit tests",
        "phpstan": "vendor/bin/phpstan analyse -l 1 src tests",
        "psalm": "vendor/bin/psalm"
    }
}
